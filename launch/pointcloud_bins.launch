<launch>
	<!-- change your file path -->

	<arg name="rate" value="1"/>

	<node pkg="pcl_ros" type="pcd_to_pointcloud" name="bunny" args="$(find pcl_tools)/pcd/bunny.pcd $(arg rate)" output="screen">
		<remap from="cloud_pcd" to="/bunny_points"/>
		<param name="frame_id" value="base_link" />
	</node>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find pcl_tools)/rviz/pointcloud_bins.rviz" required="true" />
	<!-- After opening rviz, please open PointCloud2 topic by yourself. -->
</launch>
