<launch>
	<!-- change your file path -->

	<arg name="file_name" value="$(find pcl_tools)/pcd/bunny.pcd"/>
	<arg name="node_name" value="bunny"/>

	<arg name="rate" value="1"/>
	<node pkg="pcl_ros" type="pcd_to_pointcloud" name="$(arg node_name)" args="$(arg file_name) $(arg rate)" output="screen">
		<remap from="cloud_pcd" to="/$(arg node_name)_points"/>
		<param name="frame_id" value="base_link" />
	</node>

	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find pcl_tools)/rviz/pointcloud_bins.rviz" required="true" />
	<!-- After opening rviz, please open PointCloud2 topic by yourself. -->
</launch>
